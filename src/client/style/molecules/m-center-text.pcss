.m-centered-content {
  margin: 0 auto 120px;
  max-width: 450px;
  padding: 0 10px;
  text-align: center;
  width: 100%;

  .a-headline {
    margin-bottom: 15px;
  }

  .a-subheading {
    &:first-of-type {
      margin-bottom: 15px;
    }

    &:nth-of-type(2) {
      margin-bottom: 60px;
    }
  }
}
